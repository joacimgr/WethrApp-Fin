<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="8dp">

        <TextView
            android:id="@+id/item_temperature"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/item_celcius"
            android:text="1"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/item_date"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:includeFontPadding="true"
            android:maxLines="1"
            android:text="2018-11-11 14:00"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/item_textCC"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud Coverage"
            android:layout_below="@+id/item_date"/>
        <TextView
            android:id="@+id/item_cloud_coverage"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_textCC"
            android:paddingLeft="20dp"
            android:layout_below="@+id/item_date"
            android:text="5"
            />
        <TextView
            android:id="@+id/item_celcius"
            android:textColor="@android:color/white"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u2103" />

        <ImageView
            android:id="@+id/item_view_icon"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="66dp"
            android:layout_toStartOf="@+id/item_temperature"
            android:layout_toEndOf="@+id/item_cloud_coverage"
            app:srcCompat="@mipmap/d1" />
    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:outlineAmbientShadowColor="@color/colorPrimary">
        <TextView
            android:id="@+id/item_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/item_celcius"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/item_date"
            android:includeFontPadding="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-11-11 14:00"
            android:maxLines="1"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/item_textCC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud Coverage"
            android:layout_below="@+id/item_date"/>
        <TextView
            android:id="@+id/item_cloud_coverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_textCC"
            android:paddingLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
            android:layout_below="@+id/item_date"
            android:text="5"
            />
        <TextView
            android:id="@+id/item_celcius"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u2103"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>